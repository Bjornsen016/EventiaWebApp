@page
@model EventiaWebapp.Pages.User.RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="container d-flex justify-content-center flex-column w-75">
    <h2 class="display-4 text-center mb-3">Register new account</h2>
    <form class="mx-1 mx-md-4" method="post">
        <div asp-validation-summary="All"></div>
        <div class="d-flex flex-row align-items-center mb-4">
            <div class="form-floating flex-fill mb-0">
                <input class="form-control flex-fill mb-0" asp-for="FirstName" placeholder="FirstName"/>
                <label class="form-label" asp-for="FirstName"></label>
                <span asp-validation-for="FirstName"></span>
            </div>
        </div>
        <div class="d-flex flex-row align-items-center mb-4">
            <div class="form-floating flex-fill mb-0">
                <input class="form-control flex-fill mb-0" asp-for="LastName" placeholder="LastName"/>
                <label class="form-label" asp-for="LastName"></label>
                <span asp-validation-for="LastName"></span>
            </div>
        </div>
        <div class="d-flex flex-row align-items-center mb-4">
            <div class="form-floating flex-fill mb-0">
                <input class="form-control flex-fill mb-0" asp-for="Email" placeholder="Email"/>
                <label class="form-label" asp-for="Email"></label>
                <span asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="d-flex flex-row align-items-center mb-4">
            <div class="form-floating flex-fill mb-0">
                <input class="form-control flex-fill mb-0" asp-for="Username" placeholder="Username"/>
                <label class="form-label" asp-for="Username"></label>
                <span asp-validation-for="Username"></span>
            </div>
        </div>
        <div class="d-flex flex-row align-items-center mb-4">
            <div class="form-floating flex-fill mb-0">
                <input class="form-control flex-fill mb-0" asp-for="PhoneNumber" placeholder="PhoneNumber"/>
                <label class="form-label" asp-for="PhoneNumber"></label>
                <span asp-validation-for="PhoneNumber"></span>
            </div>
        </div>
        <div class="d-flex flex-row align-items-center mb-4">
            <div class="form-floating flex-fill mb-0">
                <input class="form-control flex-fill mb-0" asp-for="Password" placeholder="Password"/>
                <label class="form-label" asp-for="Password"></label>
                <span asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="d-flex flex-row align-items-center mb-4">
            <div class="form-floating flex-fill mb-0">
                <input class="form-control flex-fill mb-0" asp-for="ConfirmPassword" placeholder="ConfirmPassword"/>
                <label class="form-label" asp-for="ConfirmPassword"></label>
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
        </div>
        <button class="btn btn-outline-success fw-bold m-3" type="submit">Register</button>
    </form>
</div>